    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.13.0",
    "sirv": "^2.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^4.17.17",
